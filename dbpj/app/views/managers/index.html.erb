<p id="notice"><%= notice %></p>

<h1>Managers</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Location</th>
      <th>Tel</th>
      <th>Email</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @managers.each do |manager| %>
      <tr>
        <td><%= manager.user_id %></td>
        <td><%= manager.name %></td>
        <td><%= manager.gender %></td>
        <td><%= manager.location %></td>
        <td><%= manager.tel %></td>
        <td><%= manager.email %></td>
        <td><%= manager.department ? manager.department.name : '' %></td>
        <td><%= link_to 'Show', manager %></td>
        <% if current_user.user_type == 1 %>
          <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
          <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td><td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

