<p id="notice"><%= notice %></p>

<h2>Personal Information</h2>
<p>
  <strong>User:</strong>
  <%= @manager.user_id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @manager.name %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @manager.gender %>
</p>

<p>
  <strong>Location:</strong>
  <%= @manager.location %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @manager.tel %>
</p>

<p>
  <strong>Email:</strong>
  <%= @manager.email %>
</p>

<p>
  <strong>Department:</strong>
  <%= @manager.department ? @manager.department.name : '' %>
</p>

<!--plans-->
<% if @courses != nil %>
    <h2>Plans</h2>
    <table>
      <thead>
      <tr>
        <th>Course</th>
        <th>Name</th>
        <th>Teacher</th>
        <th>Hours</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @courses.each do |course| %>
          <tr>
            <td><%= course.course_id %></td>
            <td><%= course.name %></td>
            <td><%= course.teacher_id %></td>
            <td><%= course.hours %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <h2>No Plan Now</h2>
<% end %>

<!--current user is manager, and plan is null-->
<% if @courses == nil and current_user.user_type == 3 %>
    <%= link_to 'New Plan', new_plan_path %>
<% end %>

<br>

<%= link_to 'Show all employees', employees_path %>

